
<div class ="jumbotron-post">
  <h1> Share your Auto Art here </h1>
</div>

<div class="col-md-12">
  <% if user_signed_in? %>
    <%= link_to 'New Post', new_post_path, class: "btn btn-success" %>
  <% end %>
</div> 

<div class="center">
  <div class="row">
    <% @posts.each do |post| %>
      <div class="col-md-3">
        <div class="thumbnail">
          <%= link_to image_tag(post.image.url), post %>
          <div class="caption">
            <h3><%= post.title %></h3>
            <p><%= post.user.name %></p>
            <p><%= post.description %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>