<div class ="jumbotron">
  <h1> My road my style </h1>
</div>

<div class="col-md-12">
  <% if current_user && current_user.admin? %>
    <%= link_to 'New Listing', new_listing_path, class: "btn btn-success" %>
    <%else%>
    <%  render :text => 'You have no access to this area ' %>
  <% end %>
</div>  
<br>

<div class="center">
  <div class="row">
    <% @listings.each do |listing| %>
      <div class="col-md-2">
        <div class="thumbnail">
          <%= link_to image_tag(listing.image.url), listing %>
          <div class="caption">
            <h3><%= listing.name %></h3>
            <p><%= number_to_currency(listing.price, :unit => "RM") %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<br>

