<div class= "title-text">
  <h1>Events List</h1>
</div>

<% if current_user && current_user.admin? %>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Details</th>
      <th>Link</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.title %></td>
        <td><%= event.details %></td>
        <td><%= event.link %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>

<br>
<% if current_user && current_user.admin? %>
    <%= link_to 'New Event', new_event_path %>
<% end %>
<div class="center">
  <div class="row">
    <% @events.each do |event| %>
      <div class="col-md-3">
        <div class="thumbnail">
          <%= link_to image_tag(event.image.url), event %>
            <h3><%= event.title %></h3>
            <h3><%= event.date %></h3>
        </div>
      </div>
    <% end %>
  </div>
</div>